<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Theme_Color</item>
        <item name="colorPrimaryDark">@color/Theme_Color_Dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/Transparent</item>
    </style>
    <style name="AppCompatNoActionBar.NotTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Theme_Color</item>
        <item name="colorPrimaryDark">@color/Theme_Color_Dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MaterialNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/Theme_Color</item>
        <item name="colorPrimaryDark">@color/Theme_Color_Dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">@color/Theme_Color_Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorError">@color/Red</item>

        <item name="android:statusBarColor">@color/Transparent</item>
    </style>
    <style name="MaterialNoActionBarNotTransparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/Theme_Color</item>
        <item name="colorPrimaryDark">@color/Theme_Color_Dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">@color/Theme_Color_Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorError">@color/Red</item>
    </style>

    <style name="TimePickerDialogAnother" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/Theme_Color</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/BoxColor</item>
        <item name="android:textColorSecondary">@color/Theme_Color_Dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialButtonDialogAnother</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/MaterialButtonDialogAnother</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialButtonDialogAnother</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MaterialButtonDialogAnother</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialButtonDialogAnother</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/MaterialButtonDialogAnother</item>
    </style>
</resources>